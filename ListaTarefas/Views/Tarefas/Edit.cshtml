@model Tarefa

<h2 class="text-center titulo-app"><i class="bi bi-check-square-fill"></i> Lista de Tarefas</h2>
<br />
<h5 class="text-center color-green">Atualize o nome da tarefa abaixo</h5>

<form asp-action="Edit" method="post">
    <div class="d-flex flex-row justify-content-between nova-tarefa-container">
        <input class="align-self-center form-control input-nova-tarefa" type="text" placeholder="" aria-label="default input example" asp-for="Nome">
        <button type="submit" class="btn-add-tarefa"><i class="bi bi-check"></i></button>
    </div>
</form>